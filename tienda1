class Producto:
    """
    Clase para modelar un producto en la tienda.
    
    Atributos:
        nombre (str): Nombre del producto.
        precio_unitario (float): Precio unitario del producto en COP (pesos colombianos).
        cantidad (int): Cantidad de unidades disponibles del producto.
    """
    
    def _init_(self, nombre, precio_unitario, cantidad):
        """
        Inicializa los atributos del producto.
        
        Args:
            nombre (str): Nombre del producto.
            precio_unitario (float): Precio unitario del producto en COP.
            cantidad (int): Cantidad de unidades disponibles del producto.
        """
        self.nombre = nombre
        self.precio_unitario = precio_unitario
        self.cantidad = cantidad
    
    def _str_(self):
        """
        Retorna una representaci贸n del producto en forma de cadena de texto.
        """
        return f"Producto: {self.nombre}\nPrecio Unitario: ${self.precio_unitario:,.2f} COP\nCantidad: {self.cantidad} unidades"


def recopilar_datos_producto():
    """
    Funci贸n para recopilar los datos de un producto de la tienda.
    
    Returns:
        Producto: Un objeto de la clase Producto con los datos ingresados.
    """
    nombre = input("Ingrese el nombre del producto: ")
    precio_unitario = float(input("Ingrese el precio unitario del producto en COP: "))
    cantidad = int(input("Ingrese la cantidad disponible del producto en unidades: "))
    
    return Producto(nombre, precio_unitario, cantidad)


def mostrar_inventario(productos):
    """
    Funci贸n para mostrar el inventario de productos.
    
    Args:
        productos (list): Lista de objetos Producto.
    """
    print("\nInventario de productos:")
    for producto in productos:
        print(producto)
        print("-" * 30)


# Funci贸n principal
def main():
    productos = []
    
    print("Bienvenido al sistema de inventario.\n")
    
    # Recopilando los datos de tres productos
    for i in range(1, 4):
        print(f"\nIngrese los datos del producto {i}:")
        producto = recopilar_datos_producto()
        productos.append(producto)
    
    # Mostrando el inventario
    mostrar_inventario(productos)


if _name_ == "_main_":
    main()
